<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">admin</property>

        <mapping class="com.sample.hibernate.entity.Customer"></mapping>
        <mapping class="com.sample.hibernate.entity.onetoone.Employee"></mapping>
        <mapping class="com.sample.hibernate.entity.onetoone.Address"></mapping>
        <mapping class="com.sample.hibernate.entity.onetomany.Account"></mapping>
        <mapping class="com.sample.hibernate.entity.onetomany.Cust"></mapping>
    </session-factory>
</hibernate-configuration>